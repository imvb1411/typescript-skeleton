  "scripts": {
    "start": "tsc && nodemon dist/index.js",
    "copy-dependency-injection-files": "copyfiles -u 1 ./src/dependency-injection/**/*.yaml dist/src/",
    "copy-firebase-key": "copyfiles -u 1 ./src/modules/messages/infrastructure/messaging/firebase/firebaseAccountKey.json dist/src/",
    "copy-queries": "copyfiles -u 1 ./src/modules/**/*.sql dist/src/",
    "copy-files": "npm run copy-dependency-injection-files && npm run copy-firebase-key && npm run copy-queries",
    "clean": "rimraf dist/",
    "build": "npm run clean && tsc --project ./ && npm run copy-files",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
